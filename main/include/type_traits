#ifndef _SSTL_TYPE_TRAITS_
# define _SSTL_TYPE_TRAITS_

# if defined(_SSTL_NO_EXT) || defined(_SSTL_NO_EXT_TYPE_TRAITS) || \
     defined(_SSTL_NO_TR1) || defined(_SSTL_NO_TR1_TYPE_TRAITS)
#  error Included <type_traits> but set macro to restrict it.
# else
#  include "tr1/type_traits"
#  if defined(_SSTL_USE_TR1)
namespace std
{
	using tr1;
}
#  endif
# endif

#endif
